{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "golden",
  "scopeName": "source.golden",
  "fileTypes": ["golden"],
  "patterns": [
    { "name": "comment.line.golden", "match": "--.*$" },
    { "name": "constant.numeric.float.golden", "match": "\\b((\\d+(_\\d+)*(\\.\\d+)?)|(\\.\\d+))(e[\\+\\-]?\\d+)?\\b" },
    { "name": "constant.numeric.int.golden", "match": "\\b(\\d+(_\\d+)*|0x[0..9A..F]|0o[0..7]|0b[0..1])\\b" },
    { "name": "constant.language.golden", "match": "\\b(true|false|void)\\b" },
    {
      "name": "string.quoted.single.golden",
      "begin": "'",
      "end": "'",
      "patterns": [
        { "match\"": "\\\\'" }
      ]
    },
    {
      "name": "string.quoted.backtick.golden",
      "begin": "`",
      "end": "`",
      "contentName": "string.escaped",
      "patterns": [
        { "match": "\\\\." }
      ]
    },
    { "name": "keyword.other.golden", "match": "\\b(fn|let|data|import)\\b" },
    { "name": "keyword.operator.assignment.golden", "match": "(=)" },
    { "name": "keyword.operator.comparison.golden", "match": "(<=|>=|==|<|>|!=|<=>)" },
    { "name": "keyword.operator.arithmetic.golden", "match": "(\\+|\\-|\\*|/|%)" },
    { "name": "keyword.operator.logical.golden", "match": "(and|or|xor|!)" },
    { "name": "keyword.operator.pipe.golden", "match": "(\\|)" },
    { "name": "storage.type.golden", "match": "_*[A-Z][a-zA-Z0-9_]*" }
  ],
  "repository": { }
}